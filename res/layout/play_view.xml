<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

	<ImageView
        android:src="@drawable/heart"
        android:id="@+id/heart1"
        android:contentDescription="@string/play_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:textSize="20dip" />
	<ImageView
        android:src="@drawable/heart"
        android:id="@+id/heart2"
        android:contentDescription="@string/play_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heart1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20dip" />
	<ImageView
        android:src="@drawable/heart"
        android:id="@+id/heart3"
        android:contentDescription="@string/play_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heart2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20dip" />
	<ImageView
        android:src="@drawable/heart"
        android:id="@+id/heart4"
        android:contentDescription="@string/play_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/heart3"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20dip" />

	<TableLayout
	    android:id="@+id/play_grid"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    
	    android:layout_marginTop="80dp" >

	    <TableRow>
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="1"
                android:textSize="10dp" />
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="2"
                android:textSize="10dp" />
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="3"
                android:textSize="10dp" />
	    </TableRow>
	    
	    <TableRow>
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="4"
                android:textSize="10dp" />
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="5"
                android:textSize="10dp" />
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="6"
                android:textSize="10dp" />
	    </TableRow>
	    
	    <TableRow>
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="7"
                android:textSize="10dp" />
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="8"
                android:textSize="10dp" />
            <Button
                android:id="@+id/one"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="9"
                android:textSize="10dp" />
	    </TableRow>
	</TableLayout>
	
	
	
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/heart4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        android:textSize="20dip" />
	
    <TextView
        android:id="@+id/play_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="@string/play_view_title"
        tools:context=".MainActivity" />

	<Button
	    android:id="@+id/quit_game_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignRight="@+id/play_grid"
	    android:layout_marginBottom="30dp"
	    android:layout_toRightOf="@+id/play_view_title"
	    android:onClick="quitGameAction"
	    android:text="Quit"
	    android:textSize="10dp" />

</RelativeLayout>
